<div class="container">
  <div class="card mt-2">
    <div class="card-body">
      <h2>Scoreboard (<span onload="getUsername()" id="username">N/A</span> <button class="btn btn-secondary btn-small" onclick="setUsername()">Edit</button>)</h2>
      {{#if data}}
