          <tr>
            <th scope="col">Name</th>
            <th scope="col">Score</th>
            <th scope="col" colspan="90"></th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
              <tr>
                <td>{{this.name}}</td>
                <td>{{this.entries.length}}</td>
                <td><button class="btn-primary btn poeng" onclick="addPoint('{{this.name}}')">1 point</button></td>
          {{/each}}
        </tbody>
      </table>
      {{else}}
          <p><em>No data</em></p>
      {{/if}}
    </div>
  </div>
</div>

